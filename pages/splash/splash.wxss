.container{
  padding: 0;
}

.splash {
  width: 100%;
  height: 85vh;
  display: flex;
  flex-direction: column;
  background-color: rgb(38, 138, 113);
}

.splash-body {
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.splash-footer {
  justify-content: center;
  width: 100%;
  height: 15vh;
  display: block;
  color: rgb(87, 86, 86);
  text-align: center;
}

.logo{
  color: aliceblue;
  align-self: center;
}

.app-name{
  align-self: center;
  background-color: aliceblue;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 16px;
  font-weight: bold;
  border-radius: 6px;
  padding: 3px 5px 3px 5px;
  margin-right: 5px;
}
.app-version {
  vertical-align: top;
  background-color: rgb(198, 201, 199);
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 10px;
  font-weight: bold;
  border-radius: 6px;
  padding: 1px 4px 1px 4px;
}


.copy-right {
  align-self: center;
  font-family: 'Segoe UI', sans-serif; 
  font-size: 19rpx; 
  font-weight: 630; 
  background-color: rgb(236, 238, 238);
  border-radius: 5px;
  padding: 0 3px 0 3px;
}