/**index.wxss**/
.container {
  padding: 0;
  display: flex;
}

.main-banner{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 25vh;
  width: 100%;
  background-color: rgb(38, 138, 113);
  
}

.user-info {
  display: flex;
  align-items: center;
  flex-direction: column;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: rgb(91, 93, 94);
  font-family:-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 28rpx;
  font-weight: 600;
  background-color: aliceblue;
  border-radius: 6px;
  padding: 0 5px 0 5px;
}

.content {
  width: 100%;
}

.timeline{
  display: flex;
}

.title {
  background-color: rgb(95, 108, 182);
  color: honeydew; 
  width: fit-content;
  border-radius: 6px 6px 6px 6px; 
  padding: 3px 3px 3px 3px;
  font-size: 15px;
  font-weight: 600;
  margin: 5px 0px 0px 5px;
}

.timeline-item{
  border-left: solid rgb(133, 133, 133) 3px;
  margin-left: 25px;
  padding-left: 10px;
  width: 85%;
}

.timeline-dot {
    width: 8px;
    height: 8px;
    background-color: #fff;
    border:2px solid #555;
    margin: 5px 0 0 20px;
    border-radius: 6px 6px 6px 6px ;
    overflow: hidden;
    display: inline-block;
    position: absolute;
}

.timeline-item-content{
  background-color: rgb(236, 236, 236);
  margin: 3px 0 3px 0;
  padding: 5px;
}

.item-title {
  font-weight: bold;
  font-size: 15px;
}

.item-content {
  overflow-wrap: break-word;
  font-size: 13px;
}

.item-time{
  background-color: rgb(80, 192, 173);
  border-radius: 3px;
  font-size: 10px;
  margin-left: 5px;
  color: #fff;
  padding: 0px 2px 0 2px;
}

.item-publisher{
  background-color: rgb(247, 203, 167);
  border-radius: 3px;
  font-size: 10px;
}

.item-operation {
  display: flex;
  flex-direction: row-reverse;
}