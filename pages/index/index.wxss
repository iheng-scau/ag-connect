/**index.wxss**/
.container {
  padding: 0;
  display: flex;
}

.main-banner{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 25vh;
  width: 100%;
  background-color: rgb(38, 138, 113);
  
}

.user-info {
  display: flex;
  align-items: center;
  flex-direction: column;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: rgb(91, 93, 94);
  font-family:-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 28rpx;
  font-weight: 600;
  background-color: aliceblue;
  border-radius: 6px;
  padding: 0 5px 0 5px;
}

.timeline{
  display: flex;
  width: 100%;
}

.timeline-item{
  display: flex;
  width: 100%;
  border-left: solid rgb(41, 40, 40) 3px;
}